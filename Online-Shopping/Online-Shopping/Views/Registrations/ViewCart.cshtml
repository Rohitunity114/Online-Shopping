@model IEnumerable<BusinessLayer.Model.ViewCart>

@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-brands">
    <div class="container">
        <h2> Your Cart </h2>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCost)
            </td>
            <td>
                <img src="@Url.Content(@item.Image)" height="100" width="100" />
            </td>
            <td>
                @Html.TextBoxFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCart", new { id=item.id})
                @Html.ActionLink("Delete", "DeleteCart", new { id=item.id})
            </td>
        </tr>
    }

</table>






