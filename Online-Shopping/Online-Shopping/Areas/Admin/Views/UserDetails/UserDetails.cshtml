@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Online_Shopping.Models.Registration>

@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}
    <div class="inbox">
        <h2>Users</h2>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ConfirmPassword)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].ProfileImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].State)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConfirmPassword)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <img src="@Url.Content(item.ProfileImage)" height="100" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    @*<td>
                        @Html.ActionLink("Edit", "RegistrationUpdate","Registrations", new { id=item.Userid }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Userid }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Userid })
                    </td>*@
                </tr>
            }

        </table>
        @Html.PagedListPager(Model,Page=>Url.Action("UserDetails",new { Page }),new PagedListRenderOptions() { Display=PagedListDisplayMode.IfNeeded})
    </div>
